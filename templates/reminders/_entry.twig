{% extends "_layout" %}

{% block content %}
  <a href="/reminders" class="text-md text-slate-600 underline">← zurück</a>

  <div class="mt-4 rounded-lg border bg-white p-6">
    <div class="flex items-start justify-between gap-4">
      <h1 class="text-2xl font-semibold">{{ entry.title }}</h1>

      {% set done = entry.erledigt ?? false %}
      <span class="text-xs px-2 py-1 rounded-full {{ done ? 'bg-green-100 text-green-800' : 'bg-amber-100 text-amber-800' }}">
        {{ done ? 'Erledigt' : 'Offen' }}
      </span>
    </div>

    <div class="mt-4 space-y-2 text-slate-800">
      <p><span class="font-semibold">Beschreibung:</span> {{ entry.beschreibung }}</p>
      <p><span class="font-semibold">Datum:</span> {{ entry.datum ? entry.datum|date('d.m.Y') : '-' }}</p>
      <p><span class="font-semibold">Erinnerung:</span> {{ entry.erinnerung ?? '-' }}</p>
    </div>
  </div>
{% endblock %}